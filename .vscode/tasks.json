{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Export Kokoro into ONNX (unquantized)",
            "type": "shell",
            "command": "uv run kokoro-onnx export",
            "options": {
                "cwd": "${workspaceFolder}/external/kokoro-onnx-export"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Kokoro (ONNX) with TVM",
            "type": "shell",
            "command": "python scripts/compile_onnx.py",
            "problemMatcher": []
        },
        {
            "label": "Initialize TVM Submodules",
            "type": "shell",
            "command": "git submodule update --init --recursive",
            "options": {
                "cwd": "${workspaceFolder}/reference/tvm"
            },
            "problemMatcher": []
        },
        {
            "label": "Build TVM",
            "type": "shell",
            "command": "cmake .. && make -j$(sysctl -n hw.ncpu)",
            "options": {
                "cwd": "${workspaceFolder}/reference/tvm/build"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Kokoro (PyTorch) with TVM",
            "type": "shell",
            "command": "pixi run kokoro-compile",
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "problemMatcher": []
        },
        {
            "label": "Port Decoder to TVM",
            "type": "shell",
            "command": "pixi run kokoro-port-decoder --seq-len 150",
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "problemMatcher": []
        },
        {
            "label": "Port Decoder to TVM (with validation)",
            "type": "shell",
            "command": "pixi run kokoro-port-decoder --seq-len 150 --validate",
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "problemMatcher": []
        },
        {
            "label": "Port Decoder to TVM (macOS Metal)",
            "type": "shell",
            "command": "pixi run kokoro-port-decoder --target metal-macos --seq-len 150 --output decoder_macos.dylib",
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "problemMatcher": []
        },
        {
            "label": "Port Decoder to TVM (iOS Metal)",
            "type": "shell",
            "command": "pixi run kokoro-port-decoder --target metal-ios --seq-len 150 --output decoder_ios.dylib",
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "problemMatcher": []
        }
    ]
}